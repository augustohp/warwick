[user]
    name = Augusto Pascutti
	email = augusto.hp@gmail.com
[core]
    editor = nvim
	excludesfile = ~/.gitignore_global
[color]
    ui = true
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = green
    local = blue bold
    remote = blue
[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[alias]
    co = checkout
    s = status --short
    b = branch
    br = branch
    ls = log --pretty=format:\"%h %s (%an, %cr)\"
    l = log --pretty=format:\"%h | %s | %d | %an | %cr\"
    d = diff --color-words
    go = checkout
    forget = reset --hard HEAD
    undo = reset HEAD
    pop = reset --hard HEAD^
    new = checkout -b
    cleanup = "!f() { git branch --merged ${1-main} | grep -v \" ${1-main}$\" | xargs git branch -d; }; f"
    dc = diff --color-words --cached
    review = log --oneline origin/main..
    wip = ls-files -o -m --exclude-standard
    ctags = !.git/hooks/ctags
[push]
    default = current
[rebase]
    autosquash = true
[http]
	postBuffer = 65536000
[credential]
	helper = cache --timeout=86400
[commit]
	verbose = true
[includeIf "gitdir:**/src/kobold.com.br/"]
    path = ~/.gitconfig_kobold
[includeIf "gitdir:**/src/crawly.com.br/"]
    path = ~/.gitconfig_crawly
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
