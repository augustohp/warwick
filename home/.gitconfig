[user]
    name = Augusto Pascutti
[core]
    editor = vim
	excludesfile = /Users/apascutti/.gitignore_global
[color]
    ui = true
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = green
    local = blue bold
    remote = blue
[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[alias]
    co = checkout
    s = status --short
    br = branch
    ls = log --pretty=format:\"%C(green)%h%Creset %C(black)%cr%Creset %s %C(auto)%d%Creset %C(blue)%an%Creset\"
    l = log --pretty=format:\"%h | %cr | %s | %d | %an\"
    d = diff --color-words
    go = checkout
    forget = reset --hard HEAD
    undo = reset HEAD
    new = checkout -b
    cleanup = "!f() { git branch --merged ${1-master} | grep -v \" ${1-master}$\" | xargs git branch -d; }; f"
    review = diff --color-words --cached
    o-que-mudou = diff --color-words HEAD^
[push]
    default = current
[rebase]
    autosquash = true
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[http]
	postBuffer = 65536000
[credential]
	helper = cache --timeout=86400
[include]
    path = ~/.gitconfig_local
