alias ls="ls -G"

# Homebrew bash-completion support
if [ -f $(brew --prefix)/etc/bash_completion ]; then
    . $(brew --prefix)/etc/bash_completion
fi

export PATH="/usr/local/sbin:/usr/local/bin:/usr/local/Cellar/ruby/1.9.3-p327/bin:$PATH"
